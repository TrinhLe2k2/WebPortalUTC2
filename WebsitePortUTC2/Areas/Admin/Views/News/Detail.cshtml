
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="news-detail">
    <div class="bg-light container-fluid py-5">
        <div class="container" style="min-height: 100vh">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="container">
                        <h2>@ViewBag.detail.name</h2>
                        <div class="d-flex">
                            <p class="px-3 py-2">Danh mục: <b>@ViewBag.detail.newsCategoryObj.name</b></p>
                            <p class="px-3 py-2">Ngày: <b>@ViewBag.detail.publishedAt</b></p>
                            <p class="px-3 py-2">Lượt xem: <b>@ViewBag.detail.viewNumber</b></p>
                        </div>
                        <div class="mb-3">
                            <div class="position-relative" style="padding-bottom: 50%;">
                                @{
                                    if (ViewBag.detail.imageObj == null)
                                    {
                                        <img src="https://www.survivorsuk.org/wp-content/uploads/2017/01/no-image.jpg" class="position-absolute w-100 h-100" style="object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="@ViewBag.detail.imageObj.relativeUrl" class="position-absolute w-100 h-100" style="object-fit: cover;" />
                                    }
                                }
                            </div>
                        </div>
                        <p class="format-content">
                            @ViewBag.detail.description
                        </p>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    @{
                        for (int i = 0; i < ViewBag.newsCount; i++)
                        {
                            <a href="/News/@ViewBag.news[i].nameSlug-@ViewBag.news[i].id" class="news-link text-decoration-none d-block mb-3 text-black">
                                <div class="row bg-white rounded-4 p-3">
                                    <div class="col-4">
                                        <div class="news-poster position-relative w-100 h-100" style="padding-bottom: 75%;">
                                            <img src="@ViewBag.news[i].imageObj.relativeUrl" class="position-absolute w-100 h-100 rounded-4" style="object-fit: cover;" alt="">
                                        </div>
                                    </div>
                                    <div class="news-description col-8">
                                        <p class="fw-bold mb-0 limit-tag-p">@ViewBag.news[i].name</p>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                    <hr />
                    <div class="row justify-content-between my-3 rounded-4">
                        <a href="/Admissions/Index" class="btn btn-light rounded-4">Xem tất cả tin tức</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</section>

